<% content_for :library do %>
  <ul class="breadcrumb">
    <li><%= link_to '首页', root_path %> <span class="divider">/</span></li>
    <li>用户列表</li>
  </ul>
<% end %>
<h1>全部用户</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Logo</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag(user.logo.url(:small))%></td>
        <td><%= link_to user.name, user_path(user) %></td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini btn-primary' %>
          <%= link_to 'Destroy', user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

